<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SelectionFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:textColor="@color/white"
        android:background="@drawable/blue_rounded"
        android:id="@+id/btnGoogleMapsApproach"
        android:textAlignment="center"
        android:text="@string/google_maps_approach" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"

        app:layout_constraintEnd_toEndOf="@id/btnGoogleMapsApproach"
        app:layout_constraintStart_toStartOf="@id/btnGoogleMapsApproach"
        app:layout_constraintTop_toBottomOf="@id/btnGoogleMapsApproach"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/blue_rounded"
        android:id="@+id/btnServiceApproach"
        android:text="@string/services_approach" />

</androidx.constraintlayout.widget.ConstraintLayout>